    <%= f.label :url_image %><br>
    <%= f.file_field :url_image %>
  </div>
  <div class="field">
    <%= f.label :city_id %><br>
    <%= f.collection_select :city_id, @cities, :id, :name, include_blank: false %>
  </div>
  <div class="field">
    <%= f.label :category_id %><br>
    <%= f.collection_select :category_id, @categories, :id, :name, include_blank: false %>
  </div>
